<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:shape">rectangle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Style for title of the page-->
    <style name="TitleTextViewStyle">
        <item name="android:shape">rectangle</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">500dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:clickable">false</item>
    </style>
    <!--Style for input textviews of the page-->
    <style name="InputEdiTextStyle">
        <item name="android:shape">rectangle</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:width">300dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:enabled">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--Style for buttonStyle of the page-->
    <style name="ButtonStyle">
        <item name="android:background">@color/buttonBackgroundColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Style for Link Texts-->
    <style name="LinkTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">150dp</item>
        <item name="android:clickable">true</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">@color/linkTextColor</item>
    </style>

    <!--Style for backgroundImage-->
    <style name="BackgroundImageStyle">
        <item name="android:alpha">0.1</item>
        <item name="android:src">@drawable/healthbackgorund</item>
    </style>

    <!--Style for notificationText-->
    <style name="NotificationTextStyle">
        <item name="android:textColor">@color/notificationTextRed</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
    </style>

</resources>

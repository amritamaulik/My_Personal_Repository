<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity">

    <TextView
        android:id="@+id/ChooseServicesPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:textColor="@color/titleTextColor"
        android:layout_marginBottom="600dp"
        />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:id="@+id/Q1View"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/offer1chk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/offer1"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/Offer_1"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/Q2View"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/offer2chk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/offer2"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/Offer_2"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/Q3View"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/offer3chk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/offer3"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/Offer_3"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
            <Button
                android:id="@+id/sendEnquiryBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:alpha="1"
                android:background="@color/buttonBackgroundColor"
                android:gravity="center"
                android:text="Send Enquiry "
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>